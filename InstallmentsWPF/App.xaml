<Application x:Class="InstallmentsWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InstallmentsWPF"
             StartupUri="View/LoginWindow.xaml"
             Exit="Application_Exit">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#2e3137"/>
        <SolidColorBrush x:Key="LastBackgroundColor" Color="#545d6a"/>
        <SolidColorBrush x:Key="ForegroundColor" Color="White"/>
    </Application.Resources>
</Application>
